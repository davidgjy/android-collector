<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context="com.genesis.carrescue.controllers.RegisterActivity">

    <EditText
        android:id="@+id/register_cell_phone"
        android:hint="手机号"
        style="@style/WhiteText" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <EditText
            android:id="@+id/register_verify_code"
            style="@style/WhiteText"
            android:hint="短信验证码"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btn_get_code"
            android:text="获取验证码"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:background="@drawable/sm_btn_shape"
            style="@style/VerificationButton"
            />
    </FrameLayout>

    <EditText
        android:id="@+id/register_password"
        android:inputType="textPassword"
        android:hint="请输入初始密码"
        android:layout_marginTop="2dp"
        style="@style/WhiteText" />

    <Button
        android:id="@+id/btn_register"
        android:text="注 册"
        android:background="@drawable/button_shape"
        android:layout_marginTop="50px"
        style="@style/SubmitButton"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:src="@drawable/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </ImageView>

        <TextView
            android:text="注册表示你已阅读并同意"
            style="@style/ReadMe_Gray" />

        <TextView
            android:text="xxx 服务协议"
            style="@style/ReadMe_Blue" />
    </LinearLayout>
</LinearLayout>
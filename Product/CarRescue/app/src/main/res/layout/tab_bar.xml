<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView style="@style/ListLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <com.genesis.ui.TabButton
                android:id="@+id/tab_btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:src="@drawable/tab_btn_home"
                android:text="首页"
                android:textColor="#848686" />

            <com.genesis.ui.TabButton
                android:id="@+id/tab_btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:src="@drawable/tab_btn_order"
                android:text="订单"
                android:textColor="#848686" />

            <com.genesis.ui.TabButton
                android:id="@+id/tab_btn_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:src="@drawable/tab_btn_business"
                android:text="业务"
                android:textColor="#848686" />

            <com.genesis.ui.TabButton
                android:id="@+id/tab_btn_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#EEEEEE"
                android:src="@drawable/tab_btn_user"
                android:text="账户"
                android:textColor="#848686" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>